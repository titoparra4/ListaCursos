@page
@model ListaCursos.Pages.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Course.Name</h2>

<div class="card">
    <div class="card-header">
        Descripcion
    </div>
    <div class="card-text">
        @Model.Course.Description
    </div>
</div>
<div class="card">
    <div class="card-header">
        Author
    </div>
    <div class="card-text">
        @Model.Course.Author
    </div>
</div>
<div class="card">
    <div class="card-header">
        Dirección
    </div>
    <div class="card-text">
        @Model.Course.Uri
    </div>
</div>
<div>
    <a asp-page="Courses" class="btn btn-primary">Ver la lista completa de cursos</a>
</div>

